---
layout: layouts/base.njk
title: Testimonials
pagination:
  data: collections.testimonial
  size: 10
  reverse: true
permalink: "/testimonials/{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber + 1 }}/{% endif %}index.html"
---

<div class="container py-5">
  <h1 class="mb-4">What People Are Saying</h1>

  <div class="row row-cols-1 row-cols-md-3 g-4">
    {% for t in pagination.items %}
      <div class="col">
        <div class="card h-100 shadow-sm text-center">
          {% if t.data.image %}
            <img src="{{ t.data.image }}" class="card-img-top rounded-circle mx-auto mt-3" style="width: 120px; height: 120px; object-fit: cover;" alt="{{ t.data.name }}">
          {% endif %}

          <div class="card-body">
            <h5 class="card-title">{{ t.data.name }}</h5>
            {% if t.data.role %}
              <p class="text-muted small mb-2">{{ t.data.role }}</p>
            {% endif %}
            <blockquote class="blockquote mb-0">
              <p class="card-text">"{{ t.templateContent | safe }}"</p>
            </blockquote>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>

  <!-- Pagination -->
  <nav class="mt-4 d-flex justify-content-center">
    <ul class="pagination">
      {% if pagination.href.previous %}
        <li class="page-item">
          <a class="page-link" href="{{ pagination.href.previous }}">&laquo; Prev</a>
        </li>
      {% endif %}

      {% for pageEntry in pagination.pages %}
        <li class="page-item {% if pagination.pageNumber == loop.index0 %}active{% endif %}">
          <a class="page-link" href="{{ pagination.hrefs[loop.index0] }}">{{ loop.index }}</a>
        </li>
      {% endfor %}

      {% if pagination.href.next %}
        <li class="page-item">
          <a class="page-link" href="{{ pagination.href.next }}">Next &raquo;</a>
        </li>
      {% endif %}
    </ul>
  </nav>
</div>
